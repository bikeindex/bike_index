<% if @bike.blank? %>
  <small class="text-danger">
    Missing bike
    <% if @bike_id.present? %>
      <code><%= @bike_id %></code>
    <% end %>
  </small>

<% elsif @bike.present? %>
  <%= render Badge::BikeHiddenAdminExplanation::Component.new(bike: @bike) %>
  <% bike_content = capture do %>
    <% if @bike.thumb_path.present? %>
      <small>ğŸ“·</small>
    <% end %>
    <%= @bike.title_string %>
  <% end %>
  <% if bike_link_path.present? %>
    <%= link_to bike_content, bike_link_path %>
  <% else %>
    <%= bike_content %>
  <% end %>
<% end %>

<% if @render_search && @bike_id.present? %>
  <% final_search_url = @search_url || url_for(sortable_search_params.merge(search_bike_id: @bike_id)) %>

  <%= link_to search_emoji, final_search_url, class: "display-sortable-link small ml-1" %>
<% end %>
