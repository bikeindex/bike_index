<div class="<%= wrapper_classes %>">
  <%# bootstrap sets font-weight on dt %>
  <dt class="<%= dt_classes %>">
    <%= @label %>
  </dt>
  <%# bootstrap sets margin_bottom on dd %>
  <dd class="tw:mb-0!">
    <% if @value.present? %>
      <%= @value %>
    <% else %>
      <span class="tw:opacity-50 tw:text-xs">none</span>
    <% end %>
  </dd>
</div>
