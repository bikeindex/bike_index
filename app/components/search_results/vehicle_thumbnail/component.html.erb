<%# The width of these is controlled by the container component %>
<li class="tw:cursor-pointer tw:hover:underline tw:relative tw:isolate">
  <%= vehicle_image_tag %>
  <% if render_h5? %>
    <h5>
      <% if render_for_sale_info? %>
        <%= @current_event_record.currency_symbol %><%= number_display(@current_event_record.amount) %>
      <% elsif render_event_date? %>
        <span class="localizeTime">
          <%= l occurred_at_with_fallback, format: :convert_time %>
        </span>
      <% end %>
    </h5>
  <% end %>
  <h4 class="">
    <%= link_to @bike.html_url, data: { turbo: false } do %>
      <%= bike_title_html(@bike) %>
      <span class="tw:inset-0 tw:absolute tw:z-10" "data-test-id"="vehicle-thumbnail-linkspan-#{@bike.id}"></span>
    <% end %>
  </h4>
</li>
