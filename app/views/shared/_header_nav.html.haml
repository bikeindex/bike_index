.top-header#total-top-header{data: {domain: Rails.env}}
  / %span.background-extend
  .receptacle
    .inner-recep
      %a.follow-link.logo{ href: root_url }
        = image_tag "logo.svg", class: "standard-logo"
        = image_tag "logo_cover.svg", class: "transparent-logo"
        %span.transparent-logo-bg
        %span.transparent-logo-bg

        %span.logo-background
        %h2 Bike Index
      %nav#header-tabs.collapse.in
        %ul.global-tabs
          %span#global-tabs-cover

          %li.expand_t.yes_user.hidden
            %a#your_settings_n_stuff{href: "#you"}
              - if current_user.present?
                = current_user.email
              - else
                = translate_with_args(".you")

          %li.super_user.hidden
            = link_to translate_with_args(".superuser_home"), admin_root_path, class: "follow-link"

          %li.expand_t.no_user.hidden
            %a.expand-sign-in{href: "#signup"}
              = translate_with_args(".log_in")
          %li.no_user.hidden
            = link_to translate_with_args(".sign_up"), new_user_url, class: "follow-link"

        .tab-content
          #you.tab-pane.yes_user.hidden
            %ul
              %li
                = link_to translate_with_args(".your_bikes"), my_account_url, class: "follow-link"
              %li
                %a{ title: translate_with_args(".your_preferences"), href: "/edit_my_account"}
                  = translate_with_args(".preferences")
              %li
                = link_to translate_with_args(".log_out"), session_path, method: :delete

      #head-search-bikes
        .search-fields
