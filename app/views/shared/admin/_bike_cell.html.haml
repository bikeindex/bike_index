- search_url ||= nil
- render_search ||= search_url.present?
- bike ||= nil
- bike_id ||= bike&.id
- bike ||= Bike.unscoped.find_by(id: bike_id) if bike_id.present?
-# pass bike_link_path: false to not link
- bike_link_path ||= admin_bike_path(bike_id) unless bike_link_path == false

- if bike.blank?
  %small.text-danger
    Missing bike
    - if bike_id.present?
      %code= bike_id

- elsif bike.present?
  = render Badge::BikeHiddenAdminExplanation::Component.new(bike:)
  - bike_content = capture_haml do
    - if bike.thumb_path.present?
      %small ğŸ“·
    = bike.title_string
  - if bike_link_path.present?
    = link_to bike_content, bike_link_path
  - else
    = bike_content

- if render_search && bike_id.present?
  - search_url ||= url_for(sortable_search_params.merge(search_bike_id: bike_id))

  = link_to search_emoji, search_url, class: "display-sortable-link small ml-1"
