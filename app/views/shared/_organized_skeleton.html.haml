%nav.organized-left-menu
  .organized-menu-wrapper
    %header
      - if active_organization.display_avatar
        = image_tag active_organization.avatar.url(:medium)
      %h3
        = active_organization.name
        %br
        Admin panel
    %ul.organized-mainmenu
      %li
        %span.menu-item.top-level{ class: ("active" if controller_name == "bikes") }
          Bikes
        %ul.organized-submenu
          %li
            = active_link (active_organization.paid_for?("bike_search") ? "Search" : "List"), organization_bikes_path(organization_id: active_organization.to_param), class_name: "nav-link"
          - if active_organization.paid_for?("show_recoveries")
            %li
              = active_link "Recoveries", recoveries_organization_bikes_path(active_organization), class_name: "nav-link"
          - if active_organization.paid_for?("show_partial_registrations")
            %li
              = active_link "Incompletes", incompletes_organization_bikes_path(active_organization), class_name: "nav-link"
          - if active_organization.paid_for?("csv_exports")
            %li
              = active_link "Exports", organization_exports_path(organization_id: active_organization.to_param), class_name: "nav-link", match_controller: true
          %li
            = active_link "Add a bike", new_organization_bike_path(active_organization), class_name: "nav-link"
      - if active_organization.paid_for?("bike_codes")
        %li
          %span.menu-item.top-level{ class: ("active" if controller_name == "stickers") }
            Stickers
          %ul.organized-submenu
            %li
              = active_link "Search", organization_stickers_path(organization_id: active_organization.to_param), class_name: "nav-link"
      - if active_organization.message_kinds.any?
        %li
          %span.menu-item.top-level{ class: ("active" if controller_name == "messages") }
            Messages
          %ul.organized-submenu
            - active_organization.message_kinds.each do |message_kind|
              %li
                = link_to message_kind.titleize, organization_messages_path(organization_id: active_organization.to_param, kind: message_kind), class: "nav-link #{ params[:kind] == message_kind ? "active" : "" }"
      - if current_user.admin_of?(active_organization) || current_user.superuser?
        %li
          - manage_active = %w(users manage emails).include?(controller_name)
          %span.menu-item.top-level{ class: ("active" if manage_active) }
            Manage
          %ul.organized-submenu
            %li
              = active_link "Users", organization_users_path(organization_id: active_organization.to_param), class_name: "nav-link", match_controller: true
            %li
              = active_link "Organization", organization_manage_index_path(organization_id: active_organization.to_param), class_name: "nav-link"
            %li
              = active_link "Locations", locations_organization_manage_index_path(organization_id: active_organization.to_param), class_name: "nav-link"
              %li
                = active_link "Dev resources", dev_organization_manage_index_path(organization_id: active_organization.to_param), class_name: "nav-link"
            - if active_organization.show_bulk_import?
              %ul.organized-submenu
                %li
                  - bulk_link_name = active_organization.ascend_imports? ? "Ascend Imports" : "Bulk Imports"
                  = active_link bulk_link_name, organization_bulk_imports_path(organization_id: active_organization.to_param), class_name: "nav-link", match_controller: true

.organized-wrap
  .container
    = yield
