<% kind ||= "law_enforcement"
  law_enforcement_org = current_user&.organizations&.law_enforcement&.unpaid&.first
  org_name = law_enforcement_org&.name || "your organization"

  modal_body = capture do %>
  <div class="modal-body">
    <p class="tw:mb-2!">
      <%= t(".greeting", user_name: current_user&.display_name) %>
    </p>

    <p class="tw:mb-2!"><%= t(".thank_you") %></p>
    <p class="tw:mb-2!"><%= t(".law_enforcement_features") %></p>

    <ul class="tw:ml-4 tw:list-disc">
      <li>
        <%= link_to t(".contact_bike_owners"), "https://bikeindex.org/news/recovering-bikes-before-they-are-marked-stolen", target: "_blank" %>
      </li>

      <li><%= t(".multiple_serial_search_pane") %></li>
    </ul>

    <p>
      <%= t(".email_for_access_html", email_link: link_to("support@bikeindex.org", "mailto:support@bikeindex.org")) %>
    </p>

    <p class="less-strong text-center" style="text-align: center;">
      <em><%= t(".bikeindex_is_a_nonprofit", org_name: org_name) %></em>
    </p>
  </div>
<% end %>

<%= render partial: "shared/modal", locals: { title: t(".thanks_for_using_bike_index"), modal_body: modal_body, id: "donateMessageModal", start_open: true} %>
