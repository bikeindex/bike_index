.plan-features
  %a.showPlanFeatures.collapsed{ href: "##{plan}_features", "aria-controls" => "#{plan}_features", "data-toggle" => "collapse" }
    %span.uncollapsed
      See Features >
    %span.incollapsed
      Hide Features ^
  %ul.collapse{ id: "#{plan}_features" }
    - plan_features.each do |feature|
      - next unless feature[plan]
      %li
        = feature[:title]
