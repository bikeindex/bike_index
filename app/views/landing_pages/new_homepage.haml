.root-landing-page
  %header.root-landing-banner-header
    .container
      .row
        .root-landing-header-text
          %p
            %strong
              = number_with_delimiter recovered_bike_count
            bikes recovered.
          %h1
            <span>Bike</span> <span>Registration</span> <span>that</span> <span>Works</span>
          %a.btn.btn-lg.btn-success.signup-link{ href: new_user_path }
            Get started, it's free
        .root-landing-signup
          = form_for User.new do |f|
            .form-group
              = f.label :name, 'full name', class: 'sr-only'
              = f.text_field :name, placeholder: 'name', class: 'form-control'
            .row
              .form-group.col-md-6
                = f.label :email, class: 'sr-only'
                = f.email_field :email, placeholder: 'email', class: 'form-control'
              .form-group.col-md-6
                = f.label :password, class: 'sr-only'
                = f.password_field :password, placeholder: 'password', class: 'form-control'

            .checkbox
              %label
                = f.check_box :terms_of_service
                I agree to Bike Index 
                %a.no-tab{ data: { target: terms_url } }
                  terms and conditions

            = f.submit 'Sign up for free', class: 'btn btn-success btn-lg'
            .or-block
              or
            %a.btn.btn-primary.btn-lg.root-landing-facebook{ href: '/auth/facebook' }
              Sign up for free with Facebook


  .root-landing-recovery-stories
    .container
      .row
        .recovery-story-wrapper
          %h3
            Recovery story goes here

  .root-landing-how-it-works
    .container
      .row
        register, etc
            
