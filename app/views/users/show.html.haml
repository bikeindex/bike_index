.container
  .col-md-4.ad-col
    .ad-block#top468x60
  .user-page
    %header.with-subtitle
      %h1
        - if @user.title.present?
          = @user.title
        - else
          This user's bikes
      %p.sharing-links
        = @user.show_twitter_and_website(@user)
    - if @user.mb_link_target.present?
      
      %h3
        %a{href: @user.mb_link_target}
          = @user.mb_link_title
    .description-avatar
      - if @user.avatar
        - unless @user.avatar.url(:medium) == "https://files.bikeindex.org/blank.png"
          .avatar
            = image_tag @user.avatar.url(:medium)
      - if @user.description
        .description
          = @user.description
    .sharing-section
      = render "/shared/share_this"

    - if @bikes.any?
      - @bikes.each do |bike|  
        .card
          .card-block
            .card-img-top
              - if bike.thumb_path.present?
                %img{ src: bike.thumb_path, alt: bike.title }
              - else
                / %img{ src: OTHER BIKE IMG, alt: someother title}
            .card-title
              %h3
                = link_to bike.title_string, bike.list_link_url(bike)



      /  old reference code 
      / %ul.bike-boxes
      /   = render partial: "/bikes/bike", collection: @bikes, locals: {target: "show" }
     
    - else
      %h2
        This user has no bikes yet!
