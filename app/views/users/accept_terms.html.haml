.container
  %section.content
    .receptacle
      .inner-recep.legal-content
        :markdown
          #{render partial: "info/terms_text"}

  .accept-vendor-terms

    = form_for @user, html: { class: 'form' } do |f|

      .form-group
        = f.label :terms_of_service, class: "center-accept-terms-text" do
          = f.check_box :terms_of_service
          = t(".i_agree_to_tos_html")
          %strong
      .agree-action
        = f.submit t(".submit"), class: 'btn btn-primary btn-lg center-accept-terms-button'
