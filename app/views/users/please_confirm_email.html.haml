.container
  %h1
    = t(".thanks_for_signing_up_for_bike_index")
  %h3
    = t(".please_verify_your_email")

  - if @user.present?
    %p= t(".we_sent_an_email_to_user_email_html", user_email: @user.email)
    %p
      = t(".did_not_get_an_email")
      = link_to t(".resend_confirmation_email"), resend_confirmation_email_users_path, method: :post
  - else
    %p= t(".we_sent_an_email")
    %p= t(".did_not_get_an_email")

    = form_tag resend_confirmation_email_users_path, method: :post do
      .row
        .col-md-6
          .form-group
            %label{ for: "email" }
              Email
            = email_field_tag :email, nil, required: true, class: 'form-control'
        .col-md-6
          .actions{ style: "margin-top: 2.5rem;" }
            = submit_tag t(".resend_confirmation_email"), class: 'btn btn-primary'


