- cache(bike_u) do
  %li
    .bike-box
      %a.bg-link{ href: bike_u.list_link_url(target) }
      .information-holder
        .bike-information
          %h3
            = link_to bike_u.title_u, bike_u.list_link_url(target)
          %p
            %span.attr-title
              Serial
            %span.serial-text
              = bike_u.serial_display
          %p
            %span.attr-title
              Colors
            = bike_u.frame_colors.to_sentence
        - if bike_u.stolen
          .theft-information
            %h3
              Status:
              - if bike_u.recovered
                Recovered/Found
              - else
                STOLEN
            - if bike_u.current_stolen_record.present?
              %p
                %span.attr-title
                  From
                = bike_u.short_address(bike_u.current_stolen_record)
              %p
                %span.attr-title
                  Stolen on
                = bike_u.current_stolen_record.date_stolen.strftime("%Y-%m-%d")
            
            /         - date_label = "Stolen"
            /         - date_label = "Recovered" 
            /         = bike_u.dl_list_item(bike_u.current_stolen_record.date_stolen.strftime("%Y-%m-%d"), date_label)
            /       %dl.dl-horizontal
            /         = bike_u.dl_list_item(bike_u.short_address(bike_u.current_stolen_record), "From")

      %a.image-holder{href: bike_url(bike_u) }
        
        = bike_u.thumb_image 