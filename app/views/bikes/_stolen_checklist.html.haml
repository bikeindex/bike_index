- if stolen_record&.display_checklist?
  - police_report_present = stolen_record.police_report_number.present?

  - if stolen_record.organization_stolen_message&.shown_to?(stolen_record)
    .pl-1.pr-1= render partial: "/bikes/organization_stolen_message", locals: {stolen_record: stolen_record}

  %ul.stolen-checklist
    %li.completed-item
      %span.checklist-checkbox
        &#10003;
      %span.checklist-text
        = translate_with_args(".list_bike_type_on_bike_index", bike_type: @bike.type)

    - serial_unknown = @bike.serial_unknown?
    - if serial_unknown
      %li
        %span.checklist-checkbox
        %span.checklist-text
          = translate_with_args(".add_serial_number")
          %em= translate_with_args(".contact_seller")

    - street_present = stolen_record.street.present?
    %li{ class: street_present ? "completed-item" : "" }
      %span.checklist-checkbox
        = "&#10003;".html_safe if street_present
      %span.checklist-text
        - edit_bike_link = link_to(t(".location_where_the_theft_occurred"), edit_bike_url(id: @bike.to_param, edit_template: "theft_details"))
        = translate_with_args(".report_theft_html", edit_bike_link: edit_bike_link)

    - images_present = @bike.public_images.any?
    %li{ class:  images_present ? "completed-item" : "" }
      %span.checklist-checkbox
        = "&#10003;".html_safe if images_present
      %span.checklist-text
        = translate_with_args(".add")
        = link_to translate_with_args(".a_photo_of_your_bike_type", bike_type: @bike.type),
          edit_bike_url(id: @bike.to_param, edit_template: "photos")


    - submitted_to_police_services = police_report_present && !serial_unknown

    -# We only have recommendations for reporting your theft to police if your bike is reported stolen in the Netherlands
    - if stolen_record.country == Country.netherlands
      %li{ class: police_report_present ? "completed-item" : "" }
        %span.checklist-checkbox
          = "&#10003;".html_safe if police_report_present
        %span.checklist-text
          = translate_with_args(".nl_file_police_report")
        - unless police_report_present
          %ul
            %li
              %span.checklist-uncheckbox
              %strong
                = translate_with_args(".nl_online")
              = link_to translate_with_args(".nl_website_link_text"), "https://www.politie.nl/aangifte-of-melding-doen/voorbereiding-aangifte/diefstal-fiets.html", target: "_blank"
              %em
                = translate_with_args(".nl_digid_required")
            %li
              %span.checklist-uncheckbox
              %strong
                = translate_with_args(".nl_phone")
              = translate_with_args(".nl_phone_report")
            %li
              %span.checklist-uncheckbox
              %strong
                = translate_with_args(".nl_person")
              = translate_with_args(".nl_person_report")
              = link_to "www.politie.nl/mijn-buurt/politiebureaus", "https://www.politie.nl/mijn-buurt/politiebureaus"
    %li{ class: police_report_present ? "completed-item" : "" }
      %span.checklist-checkbox
        = "&#10003;".html_safe if police_report_present
      %span.checklist-text
        - bike_link = link_to(t(".your_police_report"), edit_bike_url(id: @bike.to_param, edit_template: "theft_details"))
        = translate_with_args(".add_bike_link_to_your_theft_report_html", bike_link: bike_link)
      %ul
        %li{ class: submitted_to_police_services ? "completed-item" : "" }
          %span.checklist-checkbox
            = "&#10003;".html_safe if submitted_to_police_services
          %span.checklist-text
            = translate_with_args(".push_bike_info_to")
            = link_to translate_with_args(".leads_online"), translate_with_args(".leads_online_url")
            = translate_with_args(".bike_index_does_this")
          - if serial_unknown
            %span.text-danger= translate_with_args(".requires_a_serial_number")
        %li{ class: submitted_to_police_services ? "completed-item" : "" }
          %span.checklist-checkbox
            = "&#10003;".html_safe if submitted_to_police_services
          %span.checklist-text
            = translate_with_args(".push_bike_info_to_law_enforcement")
            - if serial_unknown
              %span.text-danger= translate_with_args(".requires_a_serial_number")

    - approved = stolen_record.approved
    %li{ class: approved ? "completed-item" : "" }
      %span.checklist-checkbox
        = "&#10003;".html_safe if approved
      %span.checklist-text
        = translate_with_args(".share_on_twitter")

    %li
      %span.checklist-checkbox
      %span.checklist-text
        = link_to translate_with_args(".share_widely_on_your_personal_social"), edit_bike_url(id: @bike.to_param, edit_template: "publicize")
        = translate_with_args(".facebook_instagram_etc")

    - theft_alert_purchased = stolen_record.theft_alerts.any?
    %li{ class: theft_alert_purchased ? "completed-item" : "" }
      %span.checklist-checkbox
        = "&#10003;".html_safe if theft_alert_purchased
      %span.checklist-text
        = translate_with_args(".supercharge_sharing_on_facebook")
        = link_to translate_with_args(".promoted_stolen_bike_alerts"), edit_bike_url(id: @bike.to_param, edit_template: "alert")
