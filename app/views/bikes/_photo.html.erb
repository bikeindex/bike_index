<% if @bike.publicImages.any? %>
  <div class="image-holder <%= "just1photo" if @bike.publicImages.count == 1 %>" id="selected-photo">
    <div class="current-photo" id="image<%= @bike.publicImages.first.id %>">
      <%= image_tag(@bike.publicImages.first.image_url(:large), alt: "Bike photo", id: "i|#{@bike.publicImages.first.listing_order}", data: {action: "zoom", original: @bike.publicImages.first.image_url}) %>
    </div>
  </div>
  <% if @bike.publicImages.count > 1 %>
    <span class="thumbnail-shadow"></span>
    <span class="thumbnail-shadow-r"></span>
    <div id="thumbnail-photos" class="photo-list">
      <ul id="thumbnails">
        <% if @bike.video_embed_src.present? %>
          <li>
            <a href="#" class="clickable-image" data-link="<%= @bike.video_embed_src %>" data-id="video_embed">
              <%= image_tag ("/assets/video_play_button.png"), alt: "Bike Video", class: "video-overlay" %>
              <%= image_tag @bike.publicImages.first.image.url(:small) %>
            </a>
          </li>
        <% end %>

        <% @bike.publicImages.each do |publicImage| %>
          <li>
            <a href="#" class="clickable-image" data-img="<%= publicImage.image.url(:large) %>" data-link="<%= publicImage.image.url %>" data-id="image<%= publicImage.id %>">
              <%= image_tag publicImage.image.url(:small), alt: "#{publicImage.name}", id: "i|#{publicImage.listing_order}" %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% elsif @bike.stock_photo_url.present? %>
  <div class="image-holder just1photo" id="selected-photo">
    <h4 class="stock-photo">
      Stock photo of a <%= @bike.year%> <%= @bike.frame_model %>
      <span>Color may not match!</span>
    </h4>
    <div class="current-photo">
      <%= image_tag(@bike.stock_photo_url, alt: "Bike photo", id: "i|0", data: {action: "zoom", original: @bike.stock_photo_url})%>
    </div>
  </div>
<% end %>