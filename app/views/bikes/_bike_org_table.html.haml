%section.full-screen-table
  %table.table.table-striped.table-bordered
    %thead
      %th
        = t(".date_indexed")
      %th
        = t(".manufacturer")
      %th.medium-screens
        = t(".model")
      %th.large-screens
        = t(".color")
      %th.medium-screens
        = t(".sent_to")
      %th.large-screens
        = t(".view_pdf")

    %tbody
      - @bikes.each do |bike|
        %tr
          %td
            - if bike.created_at.today?
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              = t(".today_at", created_at: bike.created_at.strftime('%-I %p'))
            - elsif Date.yesterday().beginning_of_day() <= bike.created_at
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              = t(".yesterday_at", created_at: bike.created_at.strftime('%-I %p'))
            - else
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              = bike.created_at.strftime("%-m/%-d/%Y")
          %td
            = link_to bike.mnfg_name, bike.list_link_url(target)
          %td.medium-screens
            = bike.frame_model if bike.frame_model.present?
          %td.large-screens
            = bike.primary_frame_color.name
          %td.medium-screens
            = bike.owner_email
          %td.large-screens
            = link_to t(".pdf"), pdf_bike_url(bike)
