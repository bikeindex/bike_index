.edit-bike-fields#edit_wheels
  %header
    %h2
      Wheels
  .input-group.with-optional-blocks
    %a.bikeform-tip{role: "button", title: "An amazing explanation of wheel sizing.", data: {toggle: "modal", target: "#rearWheelTip"} }
      %span
        ?
    .control-group
      %label.control-label{for: "front_standard"}
        Front wheel
      .controls
        #front_standard.standard-diams
          %select
            %option{value: ''}
              Choose diameter
            %option{ value: WheelSize.find_id_by_bsd(622) }
              700c (includes 29ers)
            %option{ value: WheelSize.find_id_by_bsd(584) }
              650b
            %option{ value: WheelSize.find_id_by_bsd(630) }
              27in
            %option{ value: WheelSize.find_id_by_bsd(559) }
              26in
            %option{ value: WheelSize.find_id_by_bsd(406) }
              20in
            %option{ value: WheelSize.find_id_by_bsd(355) }
              18in
            %option{ value: WheelSize.find_id_by_bsd(305) }
              16in
            %option{ value: WheelSize.find_id_by_bsd(203) }
              12in
        #front_all.all-dims
          = collection_select( :bike, :front_wheel_size_id, WheelSize.all , :id, :select_value, html: { :required =>true }, prompt: "All diameters")
    %a#show-front-wheel-diams.wh_sw.show-all.optional-form-block{data: {target: "#bike_front_wheel_size_id", toggle: "#hide-front-wheel-diams"}}
      Show more sizes
    %a#hide-front-wheel-diams.wh_sw.optional-form-block.currently-hidden{data: {target: "#bike_front_wheel_size_id", toggle: "#show-front-wheel-diams"}}
      Hide extra sizes
    .control-group.wheel-diameter
      %label.control-label
        Front tire
      .controls.radio-controls
        %label.radio
          = f.radio_button :front_tire_narrow, "true"
          Narrow Tire
        %label.radio.wide-tire
          = f.radio_button :front_tire_narrow, "false"
          Wide tire
  .input-group.with-optional-blocks
    %a.bikeform-tip{role: "button", title: "An amazing explanation of wheel sizing.", data: {toggle: "modal", target: "#rearWheelTip"} }
      %span
        ?
    .control-group
      %label.control-label{for: "rear_standard"}
        Rear wheel
      .controls
        #rear_standard.standard-diams
          %select
            %option{value: ''}
              Choose diameter
            %option{ value: WheelSize.find_id_by_bsd(622) }
              700c (includes 29ers)
            %option{ value: WheelSize.find_id_by_bsd(584) }
              650b
            %option{ value: WheelSize.find_id_by_bsd(630) }
              27in
            %option{ value: WheelSize.find_id_by_bsd(559) }
              26in
            %option{ value: WheelSize.find_id_by_bsd(406) }
              20in
            %option{ value: WheelSize.find_id_by_bsd(355) }
              18in
            %option{ value: WheelSize.find_id_by_bsd(305) }
              16in
            %option{ value: WheelSize.find_id_by_bsd(203) }
              12in
        #rear_all.all-dims
          = collection_select( :bike, :rear_wheel_size_id, WheelSize.all , :id, :select_value, html: { :required =>true }, prompt: "All diameters")
    %a#show-rear-wheel-diams.wh_sw.show-all.optional-form-block{data: {target: "#rear_all", toggle: "#hide-rear-wheel-diams"}}
      Show more sizes
    %a#hide-rear-wheel-diams.wh_sw.optional-form-block.currently-hidden{data: {target: "#rear_standard", toggle: "#show-rear-wheel-diams"}}
      Hide extra sizes
    .control-group.wheel-diameter
      %label.control-label
        Rear tire
      .controls.radio-controls
        %label.radio
          = f.radio_button :rear_tire_narrow, "true"
          Narrow Tire
        %label.radio.wide-tire
          = f.radio_button :rear_tire_narrow, "false"
          Wide tire

  .input-group.inform-save
    .controls
      = submit_tag "Save", class: "button-green submit-bike-update"