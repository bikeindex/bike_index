#bikes-search
  %span#manufacturer_select_values
    = @manufacturer_select_values
  %span#attribute_select_values
    = @attribute_select_values

- if @bikes.present?

  %ul.bike-boxes
    = render partial: "/bikes/bike", collection: @bikes, :locals => {target: "show" }


  .paginate-container
    / = will_paginate @bikes 

- else
  %section.bottom-of-page
    %h3
      Oh no!
    %h4
      We're sorry, no bikes matched your search!