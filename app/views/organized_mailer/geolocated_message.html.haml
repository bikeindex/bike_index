%h1
  = t(".html.your_bike", bike_title: @bike.title_string)

%p
  = t(".html.is_located_at_html", address: @organization_message.address)

%p
  %strong= @organization_message.body

<img class="geolocated-message-map" src="https://maps.googleapis.com/maps/api/staticmap?center=#{@organization_message.latitude},#{@organization_message.longitude}&zoom=13&size=640x400&maptype=roadmap&scale=2&markers=color:red%7C#{@organization_message.latitude},#{@organization_message.longitude}&key=#{ENV["GOOGLE_MAPS_STATIC"]}">

%p
  %em= t(".html.sent_by", sender_name: @organization_message.sender.display_name, org_name: @organization_message.organization.name)
