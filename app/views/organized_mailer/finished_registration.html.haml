-# `MailSnippet`s are only available in english for now
- if @organization&.mail_snippet_body('welcome').present?
  = @organization.mail_snippet_body('welcome').html_safe


- if @ownership.claim_message.present?
  - if OrganizationStolenMessage.shown_to?(@bike.current_stolen_record)
    = render partial: "/bikes/organization_stolen_message", locals: {stolen_record: @bike.current_stolen_record}
  = render partial: "/shared/claim_message", locals: {bike: @bike, skip_to_see: true}

- else
  - if @vars[:new_user]
    %h2{style: 'margin-bottom: 12px;'}
      = translate_with_args(".html.welcome_to_bike_index")

  -# used to be logic in here, but the @ownership.claim_message should mostly take this over
  - if @bike.status_impounded?
    %h1= translate_with_args(".html.thanks_for_adding_this_bike_type_you_found", bike_type: @bike.type)
  - elsif @bike.status_stolen?
    %h1= translate_with_args(".html.bike_type_thieves_are_jerks", bike_type: @bike.type)
    - if OrganizationStolenMessage.shown_to?(@bike.current_stolen_record)
      = render partial: "/bikes/organization_stolen_message", locals: {stolen_record: @bike.current_stolen_record}
    %p= translate_with_args(".html.were_sorry_your_bike_type_was_stolen", bike_type: @bike.type)
  - else
    %h1.uncap
      - if @organization.present?
        = translate_with_args(".html.bike_register_with_bike_index_and_org", bike_type: @bike.type, org_name: @organization.short_name)
      - else
        = translate_with_args(".html.bike_register_with_bike_index", bike_type: @bike.type)
  - if @organization&.mail_snippet_body('after_welcome').present?
    = @organization.mail_snippet_body('after_welcome').html_safe
  %p
    - org_name = @creation_org&.name || @ownership&.creator&.display_name

    - bike_type = if @bike.status_impounded?
      - translate_with_args(".html.recovered_bike_type", bike_type: @bike.type)
    - elsif @bike.status_stolen?
      - translate_with_args(".html.stolen_bike_type", bike_type: @bike.type)
    - else
      - @bike.type

    - if @vars[:registered_by_owner]
      = translate_with_args(".html.you_added_a_bike_type_on_bike_index", bike_type: bike_type)
    - elsif @vars[:new_registration]
      = translate_with_args(".html.org_added_a_bike_html", org_name: org_name, bike_type: bike_type)
    - else
      = translate_with_args(".html.org_sent_a_bike_html", org_name: org_name, bike_type: bike_type)

  - unless @ownership.claimed
    %h2= translate_with_args(".html.youre_almost_done_registering")

= render partial: 'shared/email_bike_box', locals: {bike_url_path: bike_url(@bike, t: @ownership.token, email: @vars[:email])}

- if @bike.status_stolen_or_impounded?
  %p
    - if @bike.status_impounded?
      - edit_bike_link = link_to translate_with_args(".html.give_us_a_heads_up"), edit_bike_url(@bike)
      = translate_with_args(".html.hopefully_you_find_the_owner_html", edit_bike_link: edit_bike_link)
    - else
      = translate_with_args(".html.hopefully_you_find_the_bike_html", bike_type: @bike.type)
      %strong
        - tokenized_url = @email_preview ? @email_preview_tokenized_url : edit_bike_recovery_url(bike_id: @bike.id, token: @bike.fetch_current_stolen_record.find_or_create_recovery_link_token)
        - mark_recovered_link = link_to(t(".html.mark_your_bike_recovered"), tokenized_url, "data-pm-no-track" => true)
        = translate_with_args(".html.mark_recovered_link_html", mark_recovered_link: mark_recovered_link)

- if @vars[:donation_message]
  .donate-message
    %h5
      - donating_link = link_to translate_with_args(".html.donating"), why_donate_url
      = translate_with_args(".html.please_consider_donating_html", donating_link: donating_link)
    %p
      - prioritize_link = link_to translate_with_args(".html.prioritize_your_listing"), news_url('get-your-donations-in-this-summer-to-help-bike-index-master-bike-seaso')
      = translate_with_args(".html.a_donation_will_prioritize_html", prioritize_link: prioritize_link)

- unless @ownership.claimed?
  - if @vars[:registered_by_owner]
    - tokenized_url = @email_preview ? @email_preview_tokenized_url : bike_url(@bike, t: @ownership.token, email: @vars[:email])
    = link_to translate_with_args(".html.claim_the_bike_type", bike_type: @bike.type), tokenized_url, "data-pm-no-track" => true, class: 'binx-button'
  - else
    - tokenized_url = @email_preview ? @email_preview_tokenized_url : bike_url(@bike, t: @ownership.token, email: @vars[:email])
    = link_to translate_with_args(".html.confirm_this_bike_type", bike_type: @bike.type), tokenized_url, "data-pm-no-track" => true, class: 'binx-button'

  - if @bike.status_stolen?
    %p= translate_with_args(".html.sign_up_on_bikeindexorg_to_claim_your_bik", bike_type: @bike.type)
  - else
    %p= translate_with_args(".html.sign_up_on_bikeindexorg_to_claim_your_bik", bike_type: @bike.type)

- if @organization && @organization.mail_snippet_body("security").present?
  = @organization.mail_snippet_body("security").html_safe
- else
  - unless @bike.status_impounded?
    -# Just to keep things wrapped up
    %div
      - unless @vars[:donation_message]
        %hr
      %h2
        = translate_with_args(".html.protect_your_bike_by_following_these_lock")
      %ul.binx-bulleted-list
        %li
          %strong= translate_with_args(".html.use_a_ulock")
          = translate_with_args(".html.cable_locks_should_never_be_used")
        %li
          = translate_with_args(".html.secure_both_wheels_either_with_two_ulocks")
        %li
          = translate_with_args(".html.before_locking_check")
      %p
        - protecting_your_bike_link = link_to translate_with_args(".html.protecting_your_bike_here"), protect_your_bike_url
        = translate_with_args(".html.read_more_about_protecting_html", link: protecting_your_bike_link)
      .locking-demonstration
        %img{alt: translate_with_args(".html.correctly_locking_a_bike"), src: 'https://files.bikeindex.org/email_assets/locking.gif', title: translate_with_args(".html.pink_power_ulocks_tm")}
      %p.center-text
        %em= translate_with_args(".html.a_correctly_locked_bike")
