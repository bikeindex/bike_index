%h1= t(".bike_index_image_assets")

%ul.serial-pictures
  %li
    %a.serial-image.blackbg{ href: image_path('resources/logo_bordered.svg') }
      = image_tag('resources/logo_bordered.svg', alt: t('.logo_with_blue_shield'))
    %p
      - svg_link = link_to 'svg', image_path('resources/logo_bordered.svg')
      - png_link = link_to 'png', image_path('resources/logo_bordered.png')
      = t(".logo_with_links_html", text: t('.logo_with_blue_shield'), svg_link: svg_link, png_link: png_link)
      %br
      %small.less-strong
        = t(".black_background_shown_here")
