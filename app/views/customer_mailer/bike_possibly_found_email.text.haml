= translate_with_args(".text.we_think_your_stolen_bike", bike_title: @bike.title_string)
= bike_url(@bike)

= translate_with_args(".text.check_out_match_here")

- if @match.is_a?(ExternalRegistryBike)
  = translate_with_args(".text.bike_registry")
  = @match.registry_name
  = @match.registry_url

  = translate_with_args(".text.bike")
  = @match.title_string
  = @match.url
- elsif @match.is_a?(Bike)
  = @match.title_string
  = bike_url(@match)
