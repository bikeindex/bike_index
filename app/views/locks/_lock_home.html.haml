- if @locks.any?
  %header.with-subtitle
    %h3
      = translate_with_args(".your_locks")
    %p.sharing-links
      = link_to translate_with_args(".add_a_new_lock"), new_lock_url

- if @locks.any?
  %ul.lock-boxes
    - @locks.each do |lock|
      %li
        .blist-image-holder
          %a{href: "/locks/#{lock.id}"}
            = image_tag("locks/#{lock.lock_type.slug}.jpg")
        .blist-primary-group
          %dl.dl-horizontal
            = attr_list_item(link_to(lock.lock_type_name, lock_url(lock)), translate_with_args(".lock_type"))
            = attr_list_item(lock.mnfg_name, translate_with_args(".manufacturer"))
            = attr_list_item(lock.key_serial, "Key serial")
            = attr_list_item(lock.combination, "Combination")
- else
  %h2= translate_with_args(".save_information_about_your_bike_lock")
  %p= translate_with_args(".lock_keys_often_have_serial_numbers_so_yo")
  %p= translate_with_args(".if_you_want_you_can_save_serial_html")
  %p= translate_with_args(".you_can_also_record_your_lock_html")
  %p
    %em= translate_with_args(".any_lock_information_you_enter_on_bike_in")

  %p= link_to translate_with_args(".save_information_about_a_lock"), new_lock_url, class: "button-blue"
