.container
  %header.with-subtitle
    %h1
      Edit the lock
    %p
      = link_to('back to viewing all locks', user_home_path(active_tab: 'locks'))


  = form_for @lock, html: { class: "form-horizontal" } do |f|
    #lock-form
      = render partial: "locks/form", locals: { f: f }

      .form-group
        .form-label
          = f.label :lock_model
        .controls
          = f.text_field :lock_model

      .form-group.lock-notes
        %label.form-label{ for: 'notes' }
          Additional notes
        .controls
          = f.text_area :notes, toolbar: 'Basic', class: 'ckeditor'

      .form-group.submit-button
        = submit_tag "Update the lock!", class: "btn btn-success btn-lg"
