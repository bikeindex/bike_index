!!!
%html
  %head
    = header_tags
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,300italic,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    = javascript_pack_tag "admin_application"
    = stylesheet_pack_tag "application_css"

  / manually override body_class in a few situations :/
  - body_class = "welcome-page" if current_page?(root_path) and controller_name == "welcome"
  - body_class = "vendor-signup-page" if current_page?(:vendor_signup)
  - body_class = "news-page" if controller_name == "news"
  %body{ id: page_id, class:  body_class }
    %nav.navbar.navbar-expand-md.navbar-light.bg-light
      %span.navbar-brand.nav-logo
        = link_to (image_tag("logo.svg")), admin_root_path
      - if current_user.superuser?
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#collapsible-admin-nav", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        .collapse.navbar-collapse#collapsible-admin-nav
          %ul.navbar-nav.admin-nav
            %li.nav-item.px-1
              %button.btn.btn-default
                = admin_nav_link "Home", root_path
            %li.nav-item.px-1
              %button.btn.btn-default
                = admin_nav_link "Users", admin_users_path
            %li.nav-item.px-1
              %button.btn.btn-default
                = admin_nav_link "Bikes", admin_bikes_path
            %li.nav-item.px-1
              %button.btn.btn-default
                = admin_nav_link "Organizations", admin_organizations_path
            %li.nav-item.px-1
              %button.btn.btn-default
                = admin_nav_link "News", admin_news_index_path
            .dropdown
              %button.btn.btn-default.dropdown-toggle{"type" => "button", "data-toggle" => "dropdown"}
                Stolen
              %ul.dropdown-menu
                %li
                  = admin_nav_link "Stolen", admin_stolen_bikes_path
                %li
                  = admin_nav_link "Recoveries", admin_recoveries_path
                %li
                  = admin_nav_link "Recovery displays", admin_recovery_displays_path
                %li
                  = admin_nav_link 'Stolen Twitterbot URL', ENV['STOLEN_TWITTERBOT_URL'].gsub(/bikes\z/, '')

            .dropdown
              %button.btn.btn-default.dropdown-toggle{"type" => "button", "data-toggle" => "dropdown"}
                Paid
              %ul.dropdown-menu
                %li
                  = admin_nav_link "Payments", admin_payments_path
                %li
                  = admin_nav_link "Paid Features", admin_paid_features_path
                %li
                  = admin_nav_link "Invoices", admin_invoices_path

            .dropdown
              %button.btn.btn-default.dropdown-toggle{"type" => "button", "data-toggle" => "dropdown"}
                Other
              %ul.dropdown-menu
                %li
                  = admin_nav_link "Memberships", admin_memberships_path
                %li
                  = admin_nav_link "Manufacturers", admin_manufacturers_path
                %li
                  = admin_nav_link "Invitations", admin_invitations_path
                %li
                  = admin_nav_link 'TSV Exports', admin_tsvs_url
                %li
                  = admin_nav_link 'Maintenance', admin_maintenance_url
                %li
                  = admin_nav_link 'Failed bikes', admin_failed_bikes_url
                %li
                  = admin_nav_link 'Component types', admin_ctypes_url
                %li
                  = admin_nav_link 'Graphs', admin_graphs_url
                %li
                  = admin_nav_link 'Edit paints', admin_paints_url
                %li
                  = admin_nav_link 'Feedbacks', admin_feedbacks_url
                %li
                  = admin_nav_link 'Tweets', admin_tweets_url
                %li
                  = admin_nav_link 'Bulk Imports', admin_bulk_imports_url
            - if Rails.env.development?
              .dropdown
                %button.btn.btn-default.dropdown-toggle{"type" => "button", "data-toggle" => "dropdown"}
                  Mailers
                %ul.dropdown-menu
                  %li
                    = admin_nav_link "organized", '/rails/mailers/organized_mailer'
                  %li
                    = admin_nav_link "admin", '/rails/mailers/admin_mailer'
                  %li
                    = admin_nav_link "customer", '/rails/mailers/customer_mailer'
          %ul.navbar-nav.ml-auto.admin-nav
            %li.nav-item
              %button.btn.btn-default
                = admin_nav_link "Exit Admin", root_path


      - elsif current_user.is_content_admin?
        %span.font-weight-bold
          = admin_nav_link "Go hard", admin_news_index_path
        %ul
          %li
            = admin_nav_link "News", admin_news_index_path

    = render 'layouts/revised_messages'

    %section#admin-content
      .container
        = yield

    = render 'shared/footer_revised'
