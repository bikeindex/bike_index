.organized-page-header
  %h1= @kinds.map(&:titleize).join(", ")

.organized-messages
  #map

  %p#messagesCount.text-right.less-strong
    %span.number 0
    = t(".matches")

  %table.table.table-striped.table-hover.table-bordered.table-sm.without-exterior-border.list-table#messages_table
    %thead.small-header.hidden-md-down
      %th.map-cell
      %th
        = t(".sent")
        %small.convertTimezone
      %th= t(".bike")
      %th= t(".sender")
    %tbody

:javascript
  window.pageInfo = #{@page_data.to_json}

= javascript_pack_tag "application"
