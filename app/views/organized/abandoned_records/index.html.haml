.organized-page-header
  %h1= t(".abandoned_records")

.organized-records
  #map

  %p#recordsCount.text-right.less-strong
    %span.number 0
    = t(".matches")


  %table.table.table-striped.table-hover.table-bordered.table-sm.without-exterior-border.list-table#records_table
    %thead.small-header.hidden-md-down
      %th.map-cell
      %th
        = t(".recorded")
        %small.convertTimezone
      %th=t(".bike")
      %th=t(".kind")
      %th=t(".recorder")
      %th=t(".impounded")
    %tbody

:javascript
  window.pageInfo = #{@page_data.to_json}

= javascript_pack_tag "application"
