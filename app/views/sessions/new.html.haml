.sign-in-up{ class: (sign_in_partner.present? ? "with-partner" : "not-partner") }
  - unless sign_in_partner.present?
    .sign-in-up-header.container
      .row
        %h1= translate_with_args(".get_on_bike_index")
  .container
    .sign-in-up-wrap
      .row
        .oauth-providers
          -# %a.facebook-login{ href: '/auth/facebook' }
          -#   %span.oauth-logo-block= image_tag 'revised/facebook_login.svg'
          /   %span.oauth-text-block= translate_with_args(".sign_in_using_facebook")
          -# %a.strava-login{ href: '/auth/strava' }
          -#   %span.oauth-logo-block= image_tag 'revised/strava_login.svg'
          /    %span.oauth-text-block= translate_with_args(".sign_in_using_strava")

          -#- unless sign_in_partner.present?
          -#  %a.globalid-login{ href: '/auth/globalid' }
          -#    %span.oauth-logo-block= image_tag 'revised/globalid_logo.svg'
          /     %span.oauth-text-block= translate_with_args(".sign_in_using_globalid")

          %a.magic_link-login{ href: magic_link_session_path }
            %span.oauth-logo-block
              %i.fas.fa-envelope-open-text
            %span.oauth-text-block= translate_with_args(".sign_in_using_magic_link")
        .sign-in-up-or
          %h3= translate_with_args(".or")
        .main-form
          - company = session[:company] if sign_in_partner.present? && session[:company].present?
          %h3.sign-in-up-main-form-header{ class: (company.present? ? "mb-1" : "") }
            %small
              - if sign_in_partner.present?
                = translate_with_args(".no_bike_index_account")
              - else
                = translate_with_args(".dont_have_an_account")
              = link_to translate_with_args(".sign_up"), new_user_path(partner: sign_in_partner, email: params[:email])
            - if company.present?
              - image_path = company.match?(/metro/i) ? "bikehub/metro_logo.png" : "bikehub/bikehub_logo_nosubtitle.png"
              = image_tag image_path, alt: "", class: "company-logo"
              = translate_with_args(".log_in")
              %span.company-text.uncap
                for
                %em= company
            - else
              = translate_with_args(".log_in")

          = form_for :session, url: session_url(params.permit(:return_to)) do |f|
            - if sign_in_partner
              = hidden_field_tag :partner, sign_in_partner

            .form-group
              = f.label :email, class: 'sr-only'
              = f.email_field :email,
              value: params[:email],
              placeholder: translate_with_args(".email"),
              class: 'form-control'

            .form-group
              = f.label :password, class: 'sr-only'
              = f.password_field :password,
              placeholder: translate_with_args(".password"),
              class: 'form-control'

            .checkbox
              %label
                = f.check_box :remember_me, value: '1', checked: true
                = translate_with_args(".keep_me_logged_in")

            = f.submit translate_with_args(".log_in"), class: 'btn btn-primary btn-lg'

          %p.forgot-password-link= link_to translate_with_args(".forgot_your_password"), request_password_reset_form_users_path
