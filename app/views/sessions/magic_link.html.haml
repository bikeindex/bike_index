.container
  - if @token.present?
    .text-center
      %h3
        = translate_with_args(".you_should_be_signed_in_automatically")
      %p= translate_with_args(".if_not_click_button")
      = form_tag sign_in_with_magic_link_session_path, id: "sign_in_with_magic_link", method: "post" do
        = hidden_field_tag :token, params[:token]
        %input{ type: "submit", value: translate_with_args(".sign_in"), class: 'btn btn-success btn-lg' }
      :javascript
        document.forms["sign_in_with_magic_link"].submit()
  - else
    %h3= translate_with_args(".sign_in_with_magic_link")
    - if @incorrect_token
      .alert.alert-warning.mt-2.mb-4
        %h3.header-font-alt.mb-2=t(".unable_to_auth")
        %p=t(".reenter_email")

    %p= translate_with_args(".enter_email_address")

    = form_tag create_magic_link_session_path, method: 'post' do
      .form-group
        %input{ name: 'email', id: 'email', type: 'text', placeholder: translate_with_args(".your_email_address"), class: 'form-control' }
      %input{ type: 'submit', value: translate_with_args(".get_sign_in_link"), class: 'btn btn-primary btn-lg' }
