- show_floating_menu = ParamsNormalizer.boolean(params[:show_floating_menu])
- primary_classes = "show_floating_menu" # we haven't implemented non-floating yet
/ - primary_classes = show_floating_menu ? "show_floating_menu" : ""

= form_for @user, url: my_account_path, method: :patch, multipart: true, html: { class: 'primary-edit-user-form' } do |f|
  .form-well-container.container
    .row
      %nav.primary-edit-form-well-menu{class: primary_classes}
        %ul
          - @edit_templates.each do |template, description|
            %li
              - classname = @edit_template == template ? 'active' : ''
              %a{ href: edit_my_account_path(edit_template: template), class: classname }
                %h4
                  = description

        .form-well-edit-page-select
          // ignore this select in dirty forms
          %select.dirtyignore
            - @edit_templates.each do |template, description|
              %option{ selected: (@edit_template == template), value: edit_my_account_path(edit_template: template) }
                = description
        .edit-form-well-submit-wrapper
          = hidden_field_tag :edit_template, @edit_template
          = submit_tag t(".save_changes"), class: 'btn btn-lg btn-primary'

      .col-md-8.form-well
        = render partial: @edit_template, locals: { f: f }
