.form-wrap
  .form-well-form-header-always-visible
    %h3= translate_with_args(".delete_account")

  .form-group.row.unnested-field
    .delete-from-index.no-divider-row
      %a{data: { toggle: "modal", target: "#request-delete" } }
        = render "/shared/trash_icon"
        %span{style: "margin-top: -1rem;"}= translate_with_args(".delete_my_account")

- modal_title = translate_with_args(".modal_title")
- modal_body = capture_haml do
  = form_tag do |t|
    .modal-body
      %p.text-center
        = translate_with_args(".delete_warning_html")
    .modal-btn-footer
      .row
        .col-xs-6.col-xs-push-6
          = link_to translate_with_args(".delete_account"), my_account_path, method: :delete, class: "btn btn-danger"
        .col-xs-6.col-xs-pull-6
          %button.btn.btn-secondary{ "data-dismiss" => "modal", type: "button" }
            = translate_with_args(".nevermind")

= render partial: "/shared/modal", locals: { title: "Delete your account", id: "request-delete", modal_body: modal_body }

-# Add no-save-button class to primary-edit-form-well-menu
:javascript
  $(document).ready(function () {
    $(".primary-edit-form-well-menu").addClass('no-save-button')
  })
