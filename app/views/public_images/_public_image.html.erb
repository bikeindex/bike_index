<% skip_order ||= false %>
<li class="public_image card bg-light" id="<%= public_image.id %>">
  <div class="card-body bg-light">
    <%= image_tag(public_image.image_url(:small)) if public_image.image? %>
    <p><%= public_image.name.truncate(18) %></p>
    <div class="form-group">
      <% if public_image.imageable_type != 'Blog' %>
        <div class="row">
          <div class="col-md-6">
            <textarea class="form-control">&lt;img class="post-image" src="<%= public_image.image_url %>" alt="ENTER YOUR TEXT HERE"&gt;</textarea>
            <p><span>Copy the above text and paste it where you'd like it to appear</span></p>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-md-6">
            <textarea class="form-control">&lt;img class="post-image" src="<%= public_image.image_url %>" alt="ENTER YOUR TEXT HERE"&gt;</textarea>
          </div>
          <div class="col-md-2">
            <p>
              Copy the above text and paste it where you'd like it to appear in the post
            </p>
          </div>
          <div class="col-md-2">
            <%= link_to "Delete image", public_image_url(public_image, return_url: edit_admin_news_url(@blog)), method: :delete, class: "btn btn-danger float-right" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% unless skip_order %>
      <div class="index-image-select"><input type="radio" name="index_image_id" value="<%= public_image.id %>" class="index_image_<%= public_image.id %>"></div>
    <% end %>
  </div>
</li>
