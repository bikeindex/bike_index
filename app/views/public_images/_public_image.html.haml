- bike_type ||= image.bike_type || "bike"

%li.col-xs-6.col-sm-4.edit-photo-display-list-item{ id: image.id }
  .edit-photo-display-wrap
    .kind-select-wrap
      - kind_select_options = { photo_uncategorized: "Photo of your #{bike_type}",
          photo_stock: "Stock photo",
          photo_of_user_with_bike: "You with your #{bike_type}",
          photo_of_serial: "Photo of serial number",
          photo_of_receipt: "Photo of receipt"}
      = select_tag(:kind, options_for_select(kind_select_options.map { |k, v| [v, k.to_s] }), class: "form-control")

    .processing
      = t(".processing")
    - if image.image?
      %img{ src: image.image_url(:small) }
    - else
      %em.missing-image
        = t(".missing_image")
    .bottom-photo-edit-wrap
      %label.keep-private
        %input.is_private_check{ type: 'checkbox', checked: image.is_private }
        = t(".keep_image_private")
      .remove-wrapper
        %a.photo-remove{ href: public_image_url(image, page: 'photos', return_url: edit_bike_url(@bike, page: 'photos')), rel: 'nofollow', 'data-method' => 'delete' }
          = render 'shared/trash_icon'

