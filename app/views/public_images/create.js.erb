<% if publicImage.new_record? %>
  alert("Failed to upload publicImage: <%= j publicImage.errors.full_messages.join(', ').html_safe %>");
<% else %>
  <% if publicImage.imageable_type == 'Bike' %>
    item = "<li class='publicImage' id='<%= publicImage.id %>'><div class='processing'>... processing</div>";
    item = item + "<img src='<%= publicImage.image_url %>'><div class='actions'>"
    item = item + "<a href='<%= edit_publicImage_path(publicImage) %>' class='photo-edit'>Edit</a>"
    item = item + "<a href='<%= publicImage_url(publicImage, return_url: edit_bike_url(@bike)) %>' class='photo-remove' data-method='delete' rel='nofollow'>Delete</a>"
    item = item + '</div></li>'
    $("#publicImages").append(item);
  <% else %>
    $("#publicImages").append("<%= j render(publicImage) %>");
  <% end %>
<% end %>
