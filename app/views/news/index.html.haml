#news_display
  %h1.blog-index-head
    Bike Index news
    = link_to image_tag('feed_icon.svg'), news_index_url(format: 'atom'), { title: 'Bike Index news feed' }

  %hr
%article
  %ul.news-index-list
    - @blogs.each_with_index do |blog, index|
      %li
        - if index < 10 && blog.index_image.present?
          %a.index-image-link{ href: news_url(blog) }
            = image_tag blog.index_image
        %h2
          %a{ href: news_url(blog) }
            %span
              = blog.title

        %p.blog-index
          = blog.description
