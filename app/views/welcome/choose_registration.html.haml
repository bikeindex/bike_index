.container
  - if current_user.present?
    .row.choose-registration-items
      .choose-links.col-sm-6
        %ul
          - if current_user.organization_roles.any?
            - current_user.organization_roles.each do |membership|
              %li
                %a.organization-choice.choose-type{data: {target: new_bike_url(organization_id: membership.organization.id)}}
                  %span.add-selected
                    &#10004
                  = t(".add_a_bike_through")
                  %em
                    = membership.organization.name
          %li
            %a.purchase-choice.choose-type{data: {target: new_bike_url}}
              %span.add-selected
                &#10004
              = t(".add_your_own_bike")

          %li
            %a.choose-type{data: {target: new_bike_url(status: "stolen")}}
              %span.add-selected
                &#10004
              = t(".add_a_stolen_bike")
          %li
            %a.choose-type{data: {target: new_bike_url(status: "impounded")}}
              %span.add-selected
                &#10004
              = t(".add_abandoned_bike_you_found")
      .col-sm-6.add-bike-column
        %a#add-bike.btn.btn-success.btn-lg{href: new_bike_url}
          = t(".register_bike")
