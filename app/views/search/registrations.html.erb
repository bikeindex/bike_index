<div class="tw:px-4 tw:max-w-7xl tw:mx-auto">
  <h1 class="tw:text-3xl tw:text-slate-800 tw:mb-4">Search all registrations</h1>
  <%= render Search::Form::Component.new(target_search_path: registrations_search_index_path, interpreted_params: @interpreted_params, selected_query_items_options: @selected_query_items_options) %>
</div>

<div class="container tw:mt-6">
  <%= turbo_frame_tag :search_results_frame, src: registrations_search_index_path, loading: :lazy do %>
    <%= render LoadingSpinner::Component.new(text: t(".loading_results")) %>
    <%# if @render_results %>
      <%#= render partial: "/search/results" %>
    <%# else %>
    <%#= render LoadingSpinner::Component.new(text: t(".loading_results")) %>
  <% end %>
</div>
