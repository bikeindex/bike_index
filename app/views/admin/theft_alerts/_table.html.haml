- render_sortable ||= false
- skip_bike ||= false

.full-screen-table
  %table.table.table-striped.table-bordered.table-sm
    %thead.small-header
      %tr
        %th Created
        - unless skip_bike
          %th Bike
        %th Creator
        %th Plan
        %th Status
        %th Start
        %th End
        %th Facebook
        %th Notes
    %tbody
      - theft_alerts.each do |theft_alert|
        %tr
          %td
            = link_to l(theft_alert.created_at, format: :convert_time), edit_admin_theft_alert_path(theft_alert), class: "convertTime"
          - unless skip_bike
            %td
              - if theft_alert.bike.present?
                = link_to theft_alert.bike.title_string, edit_admin_bike_path(theft_alert.bike)
          %td
            = link_to theft_alert.creator.display_name, edit_admin_user_path(theft_alert.creator.to_param)
          %td
            - theft_alert_plan = theft_alert.theft_alert_plan
            %small
              = link_to theft_alert_plan.title_string, edit_admin_theft_alert_plan_path(theft_alert_plan)
              %span.less-strong
                = number_to_currency(theft_alert_plan.amount_cents / 100.0, unit: "$")
          %td
            - if theft_alert.recovered?
              = link_to "recovered!", admin_recovery_path(theft_alert.bike), class: "text-success"
            - else
              - text_class = "text-info" if theft_alert.active?
              - text_class ||= "text-danger" if theft_alert.pending?
              %span{ class: text_class || "" }
                = theft_alert.status
          %td
            %small.convertTime= l(theft_alert.begin_at, format: :convert_time) if theft_alert.begin_at.present?
          %td
            %small.convertTime= l(theft_alert.end_at, format: :convert_time) if theft_alert.end_at.present?
          %td
            = link_to "fbook link", theft_alert.facebook_post_url, target: "_blank" if theft_alert.facebook_post_url.present?
          %td
            %small
              = theft_alert.notes

