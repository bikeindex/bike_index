.admin-subnav
  .col-md-12
    %h1 Theft Alerts

.full-screen-table
  %table.table.table-striped.table-bordered.table-sm
    %thead.small-header
      %tr
        %th Created
        %th Bike
        %th Creator
        %th Plan
        %th Status
        %th Start
        %th End
        %th Facebook post
        %th
    %tbody
      - @theft_alerts.each do |alert|
        %tr
          %td
            %span.convertTime= l(alert.created_at, format: :convert_time)
          %td
            - if alert.bike.present?
              = link_to alert.bike.title_string, edit_admin_bike_path(alert.bike)
            - if alert.recovered?
              #{alert.bike.type} recovered
          %td
            = link_to alert.creator.display_name, edit_admin_user_path(alert.creator.to_param)
          %td
            - plan = alert.theft_alert_plan
            = link_to plan.title_string, edit_admin_theft_alert_plan_path(plan)
          %td
            = alert.status
          %td
            %span.convertTime= l(alert.begin_at, format: :convert_time) if alert.begin_at.present?
          %td
            %span.convertTime= l(alert.end_at, format: :convert_time) if alert.end_at.present?
          %td
            = link_to "fbook link", alert.facebook_post_url, target: "_blank" if alert.facebook_post_url.present?
          %td
            = link_to "edit", edit_admin_theft_alert_path(alert), class: "btn btn-info p-1"

= paginate @theft_alerts, views_prefix: "admin"
