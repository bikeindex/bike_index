%h1
  = @manufacturer.name
- if @manufacturer.frame_maker
  %h4
    #{@manufacturer.name} makes Frames
%hr

.dl-holder
  %dl.dl-horizontal
    = @manufacturer.dl_from_attribute('id')
    = @manufacturer.dl_from_attribute('slug')
    = @manufacturer.dl_from_attribute("open_year")
    = @manufacturer.dl_from_attribute("close_year")
    - if @manufacturer.website.present?
      = @manufacturer.dl_list_item(link_to(@manufacturer.website, @manufacturer.website), "Website")
    = @manufacturer.dl_from_attribute('description')
  %dl.dl-horizontal
    %dt
      Bikes
    %dd
      = @manufacturer.bikes.count
    %dt
      Components
    %dd
      = @manufacturer.components.count

  - if @manufacturer.logo.present?
    = image_tag @manufacturer.logo.url(:thumb)

  
.actions.padded
  = link_to "Edit", edit_admin_manufacturer_url(@manufacturer), class: "button-green"
  = link_to "Delete", admin_manufacturer_url(@manufacturer), method: :delete, confirm: "Are you sure?", class: "button-red"