%header.with-subtitle
  %h1
    Our #{@dignified_name}
  = link_to 'New Blog', new_admin_news_url, class: "button-green sharing-links"

%section.full-screen-table
  %table.table.table-striped.table-bordered
    %thead
      %th.medium-screens
        Date
      %th.medium-screens
        Creator
      %th
        Content
      %th.medium-screens
        Vignettes
      %th
        Published
    %tbody
      - @blogs.each do |blog|
        %tr
          %td.medium-screens
            = l blog.published_at, format: :dotted
          %td.medium-screens
            = blog.user.name || blog.user.email
          %td
            %p.blog-index
              = link_to blog.title, edit_admin_news_url(blog)
              %br
              = blog.body_abbr.html_safe if blog.body_abbr
          %td.table-cell-check
            = "&#x2713;".html_safe if blog.is_listicle
          %td.table-cell-check
            = "&#x2713;".html_safe if blog.published
