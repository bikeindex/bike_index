.row
  .col-sm-9.col-md-10
    %h1 Twitter Accounts
  .col-sm-3.col-md-2
    = link_to "New Account", new_admin_twitter_account_path, class: "btn btn-success float-right"

%h4
  = pluralize(TwitterAccount.count, "Twitter account")
  stored

.full-screen-table-wrapper
  %table.table.table-striped.table-bordered.table-sm
    %thead.thead-light
      %th Created
      %th Handle
      %th Attributes
      %th Credentials
      %th Geo
      %th Address
      %th Neighborhood
      %th City
      %th State
      %th Country
      %th Tweets

    %tbody
      - @twitter_accounts.each do |twitter_account|
        %tr
          %td
            %a.convertTime{ href: admin_twitter_account_path(twitter_account) }
              = l twitter_account.created_at, format: :convert_time
          %td= link_to twitter_account.screen_name, "https://twitter.com/#{twitter_account.screen_name}", target: "_blank"

          %td
            %small.less-strong
              %strong active?
              %br
              = twitter_account.active?
              %br
              %strong default?
              %br
              = twitter_account.default?
              %br
              %strong national?
              %br
              = twitter_account.national?
              %br
              %strong language
              = twitter_account.language || "none set"

          %td
            %small.less-strong
              %strong Consumer Key
              %br
              = twitter_account.consumer_key
              %br
            %small.less-strong
              %strong Consumer Secret
              %br
              = twitter_account.consumer_secret
              %br
            %small.less-strong
              %strong User Secret
              %br
              = twitter_account.user_secret
              %br
            %small.less-strong
              %strong User Token
              %br
              = twitter_account.user_token
              %br
          %td
            %small.less-strong
              %strong Latitude
              %br
              = twitter_account.latitude || "none"
              %br
              %strong Longitude
              %br
              = twitter_account.longitude || "none"
              %br
          %td
            %small.less-strong= twitter_account.address
          %td
            %small.less-strong= twitter_account.neighborhood
          %td
            %small.less-strong= twitter_account.city
          %td
            %small.less-strong= twitter_account.state
          %td
            %small.less-strong= twitter_account.country
          %td= twitter_account.tweets.count
