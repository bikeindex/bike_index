%h1.mt-4
  Edit
  = link_to @organization.name, admin_organization_url(@organization)


= form_for [:admin, @organization] do |f|
  = render partial: 'form', locals: { f: f }
  .row.mt-4
    .col-md-6.mb-4
      %fieldset
        #admin-locations-fields
          = f.fields_for :locations do |builder|
            = render '/admin/organizations/location_fields', f: builder
          = revised_link_to_add_fields "Add a location", f, :locations, class_name: "btn btn-primary"

    .col-md-4
      %a.btn.btn-primary{"aria-controls" => "new_bike_notification", "aria-expanded" => "false", "data-toggle" => "collapse", :href => "#new_bike_notification"}
        New bike notification
      #new_bike_notification.collapse
        .form-group
        = f.label :new_bike_notification
        = f.text_area :new_bike_notification, class: "form-control"
    .col-md-2
      %p
        %strong
          Locations
      %p#us-country-code
        = Country.united_states.id

  - if @organization.new_bike_notification.present?
    .card.bg-light
      .card-header
        Notification:
      .card-body
        %img{src: "https://files.bikeindex.org/bikeindex-white-tilt.png"}
        = @organization.new_bike_notification.html_safe

  .mt-4
    = f.submit "Update", class: 'btn-lg btn-success float-right'

.mt-4.mb-4
  = link_to "Manage organization invitations", admin_organization_invitation_url(organization_id: @organization.to_param), class: "btn btn-warning"
