.form.form-horizontal.clearfix.mt-4
  - if @organization_stolen_message.errors.any?
    = render partial: "/shared/errors", locals: {name: "Organization Stolen Message", obj: @organization_stolen_message}
  = form_for @organization_stolen_message, {as: :organization, url: admin_organization_custom_layout_path(organization_id: @organization.to_param, id: params[:id]), action: "update" } do |f|
    = f.fields_for :organization_stolen_message do |osm|
      .form-group
        = osm.label :body, "Stolen Message text"
        = osm.text_area :body, rows: 5, class: "form-control"
      .row
        .col-md-6
          .form-check
            %label
              = osm.check_box :is_enabled, class: "form-check-input"
              Enable
              %strong
                = @edit_template.titleize
              %em
                only possible if there is content
        .col-md-6
          = f.submit 'Save', class: 'btn btn-success float-right'
  .mt-4
