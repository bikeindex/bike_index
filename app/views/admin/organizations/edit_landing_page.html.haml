%header.with-subtitle#blog-edit
  %h1
    Editing #{@organization.name} Landing page

.blog-entry-fields
  .form.form-horizontal
    - if @organization.errors.any?
      #alert-block
        .alert.alert-error
          %h4
            Please fix the following 
            = pluralize(@organization.errors.count, "error")
          %ul
            - @organization.errors.full_messages.each do |msg|
              %li
                = msg
    = form_for [:admin, @organization] do |f|
      .blog-field
        = f.text_area :landing_html, placeholder: 'Landing page (html)'
      = f.submit 'Save', class: 'button-green pull-right'
    // Because somewhere, there is overflow hidden and it cuts off the bottom of the save button
    .padded
.padded