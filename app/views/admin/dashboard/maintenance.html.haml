.admin-subnav
  .col-12
    %h1
      Maintaining things

.full-screen-table
  %h2
    Recent example bikes
    = link_to "Delete example bikes", admin_destroy_example_bikes_url
  - if @bikes.any?
    = render partial: "/admin/bikes/table"
    .row.justify-content-end
      .col-auto
        %p
          #{Bike.unscoped.where(example: true).count} example bikes total

  - else
    No example bikes right now!

  %h2
    Component types
  .full-screen-table
    %table.table.table-striped.table-bordered.table-sm
      %thead.thead-light
        %th
          Date
        %th
          Component
        %th
          Component id
        %th
          Bike

      %tbody
        - @component_mnfgs.each do |f|
          %tr
            %td
              %span.convertTime
                = l f.created_at, format: :convert_time

            %td
              Type:
              %span.stolen-color
                #{f.ctype_other},
              - if f.cmodel_name.present?
                name: #{f.model_name},
              - if f.year.present?
                year: #{f.year},
              - if f.description.present?
                description: #{f.description},
              manufacturer:
              - if f.manufacturer_other.present?
                %span.stolen-color
                  #{f.manufacturer_other},
              - else
                #{f.manufacturer.name},
              front: #{f.front},
              rear: #{f.rear},
              - if f.serial_number.present?
                serial_number: #{f.serial_number}
            %td
              = f.id
            %td
              = link_to f.bike_id, edit_admin_bike_url(f.bike_id)

  %h2
    Handlebar Types
  .full-screen-table
    %table.table.table-striped.table-bordered.table-sm
      %thead.thead-light
        %th
          Date
        %th
          Handlebar type
        %th
          Bike
      %tbody
        - @handlebar_types.each do |f|
          %tr
            %td
              %span.convertTime
                = l f.created_at, format: :convert_time

            %td
              = f.handlebar_type_other
            %td
              = link_to f.id, edit_admin_bike_url(f)
