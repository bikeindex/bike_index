%h1= "Ambassador: #{@ambassador.username}"

- if @ambassador.avatar
  - unless @ambassador.avatar.url(:medium) == 'https://files.bikeindex.org/blank.png'
    = image_tag @ambassador.avatar.url(:medium), class: 'users-show-avatar'


%table.table.table-striped.table-hover.table-bordered.table-sm.without-exterior-border
  %tbody
    - @ambassador_attributes.each_pair do |key, value|
      %tr
        %td
          %strong= key
        %td= value

%h2 Ambassador Tasks

%p
  %strong= "#{@ambassador.progress_count} complete"

%table.table.table-striped.table-hover.table-bordered.table-sm.without-exterior-border.ambassador-tasks-table
  %thead.small-header
    %tr
      %th Task
      %th Completed at
  %tbody
    - @ambassador.ambassador_task_assignments.order(created_at: :asc).each do |task|
      %tr
        %td
          %strong= task.title
          %br
          = task.description_html.html_safe
        %td
          - if task.completed_at
            %span.convertTime= l task.completed_at, format: :convert_time
