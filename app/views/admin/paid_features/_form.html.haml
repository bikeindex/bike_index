.form.form-horizontal
  = form_for [:admin, @paid_feature] do |f|
    - if @paid_feature.errors.any?
      #alert-block
        .alert.alert-error
          %h4
            Please fix the following 
            = pluralize(@paid_feature.errors.count, "error")
          %ul
            - @paid_feature.errors.full_messages.each do |msg|
              %li
                = msg
    .control-group.padded
      .control-label
        = f.label :kind
      .controls
        - if @paid_feature.locked?
          %span.less-strong
            = @paid_feature.kind
        - else
          = f.select :kind, PaidFeature.kinds

    .control-group.padded
      .control-label
        = f.label :name
      .controls
        - if @paid_feature.locked?
          %span.less-strong
            = @paid_feature.name
        - else
          = f.text_field :name

    .control-group.padded
      .control-label
        = f.label :amount_cents
      .controls
        = f.number_field :amount_cents, step: 1, min: 0

    .control-group.padded
      .control-label
        = f.label :description
      .controls
        = f.text_area :description, style: "width: 100%;"

    .control-group.padded
      .control-label
        = f.label :details_link
      .controls
        = f.text_field :details_link

    = f.submit "Submit", class: 'button-green'