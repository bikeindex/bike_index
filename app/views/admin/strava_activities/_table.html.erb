<%# locals: (collection:, render_sortable: false) %>

<div class="full-screen-table">
  <table class="table table-striped table-bordered table-sm">
    <thead class="thead-light">
      <th><%= sortable "created_at", render_sortable: render_sortable %></th>

      <th><%= sortable "start_date", render_sortable: render_sortable %></th>

      <th>Title</th>

      <th>
        <%= sortable "activity_type", "Type", render_sortable: render_sortable %>
      </th>

      <th>
        <%= sortable "distance_meters", "Distance", render_sortable: render_sortable %>
      </th>

      <th>User</th>

      <th>
        <%= sortable "strava_integration_id", "Integration", render_sortable: render_sortable %>
      </th>
    </thead>

    <tbody>
      <% collection.each do |activity| %>
        <tr>
          <td>
            <div class="less-strong-hold">
              <span class="localizeTime">
                <%= l activity.created_at, format: :convert_time %>
              </span>

              <% if display_dev_info? %>
                <span class="less-strong-right d-none d-md-block only-dev-visible">
                  <%= activity.id %>
                </span>
              <% end %>
            </div>
          </td>

          <td>
            <% if activity.start_date.present? %>
              <span class="localizeTime">
                <%= l activity.start_date, format: :convert_time %>
              </span>
            <% end %>
          </td>

          <td><small><%= activity.title&.truncate(30) %></small></td>

          <td>
            <% if activity.cycling? %>
              <span class="text-success"><%= activity.activity_type %></span>
            <% else %>
              <small><%= activity.activity_type %></small>
            <% end %>
          </td>

          <td>
            <small><%= activity.distance_miles&.then { "#{it} mi" } %></small>
          </td>

          <td>
            <%= render Admin::UserCell::Component.new(user: activity.strava_integration.user, user_id: activity.strava_integration.user_id, render_search: render_sortable) %>
          </td>

          <td>
            <%= link_to activity.strava_integration_id,
                  admin_strava_integration_path(activity.strava_integration_id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
