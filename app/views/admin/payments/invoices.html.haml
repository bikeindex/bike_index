.admin-subnav
  .col-md-6
    %h1
      - if params[:query].present?
        %em
          = params[:query]
          Invoices
    %h4
      = pluralize(@invoices.total_count, "matching invoice")
    %p
      Go to organizations to create new invoices

  .col-md-6
    %ul
      - if params[:query].present?
        %li
          = link_to "view all", admin_invoices_path, class: "nav-link"
      %li
        = link_to "active", admin_invoices_path(query: "active"), class: "nav-link #{params[:query] == "active" ? "active" : ""}"
      %li
        = link_to "inactive", admin_invoices_path(query: "inactive"), class: "nav-link #{params[:query] == "inactive" ? "active" : ""}"

= paginate @invoices, views_prefix: "admin"

= render partial: "/admin/organizations/invoices/table", locals: { invoices: @invoices, render_sortable: true, display_organization: true }
