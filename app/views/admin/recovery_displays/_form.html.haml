= form_for [:admin, @recovery_display] do |f|
  - if @recovery_display.errors.any?
    = render partial: "/shared/errors", locals: { name: "Recovery Display", obj: @recovery_display }
  - if @recovery_display.stolen_record_id.present?
    = f.hidden_field :stolen_record_id, value: @recovery_display.stolen_record_id
  .card.mb-4.bg-light
    .card-body
      .row
        .col-lg-6
          .form-group
            = f.label :quote_by
            = f.text_field :quote_by, class: "form-control"
        .col-lg-6
          .form-group
            = f.label :link
            = f.text_field :link, class: "form-control"
      .row
        .col-lg-6
          .form-group
            = f.label :date_recovered
            - f.object.date_recovered ||= Time.now
            = f.datetime_local_field :date_recovered, max: Time.now + 1.day, step: 60, required: true, class: 'form-control dateInputUpdateZone', "data-initialtime" => l(f.object.date_recovered, format: :convert_time)
        .col-lg-6
          - if @bike.present?
            .form-group
              %label
                Bike url
              %input.less-strong.w-100{ type: 'text', value: bike_url(@recovery_display.bike) }
      .row
        .col-lg-6
          .form-group.mt-4
          = f.label :image, "Recovery photo"
          - if @recovery_display.image?
            = image_tag(@recovery_display.image_url(:thumb))
          - else
            %p
              No picture!
        .col-lg-6
          .input-group.mb-3
            .input-group-prepend
              %span#recovery_photo_addon.input-group-text.d-none.d-sm-block Upload
            .custom-file
              %input#recovery_photo_file.custom-file-input{"aria-describedby" => "recovery_photo_addon", :type => "file"}/
              %label.custom-file-label{:for => "recovery_photo_file"} Choose file
          .form-group.avatar-upload
            .avatar-img
              - if @recovery_display.image.present?
                = f.label :remove_image
                = f.check_box :remove_image
              - elsif @bike.present? && @recovery_display.image.blank?
                - if @bike.public_images.present? || @bike.stock_photo_url.present?
                  - if @bike.public_images.present?
                    - text = "has image"
                    - url = @bike.public_images.first.image_url
                  - else
                    - text = "has stock image"
                    - url = @bike.stock_photo_url
                  %label
                    #{link_to "Bike", bike_url(@bike), target: "_blank"} #{text}
                  %a.btn.btn-success#use_image_for_display{ href: '#', data: {url: url}}
                    Use first image
                    = f.hidden_field :remote_image_url
                - else
                  Bike has no image
      .row
        .col-lg-6
          .form-group
            = f.label :body
            = f.text_area :quote, placeholder: 'Quote about recovery', rows: 4, class: "form-control"
      = f.submit 'Save', class: 'btn btn-success float-right'