#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"

# Use Rails' assets:clobber task to check if assets need compilation
# If assets are already compiled and up-to-date, this will be fast
puts "Ensuring assets are compiled..."
system("RAILS_ENV=test bundle exec rails assets:precompile 2>/dev/null")

# Pass all arguments to turbo_tests
exec "bundle", "exec", "turbo_tests", *ARGV
